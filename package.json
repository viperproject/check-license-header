{
  "name": "check-license-header",
  "version": "2.0.0",
  "description": "GitHub action to check whether all files have a specified copyright license header",
  "main": "lib/main.js",
  "bin": "dist/bin/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package-main": "ncc build src/main.ts --source-map --license licenses.txt --out dist/main",
    "package-bin": "ncc build src/bin.ts --license licenses.txt --out dist/bin && prepend dist/bin/index.js '#!/usr/bin/env node\n\n'",
    "package": "npm run package-main && npm run package-bin",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viperproject/check-license-header.git"
  },
  "keywords": [
    "copyright",
    "header",
    "license",
    "actions",
    "node"
  ],
  "author": {
    "name": "Chair of Programming Methodology, ETH Zurich"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@octokit/core": "^6.1.4",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.17",
    "@types/tmp": "^0.2.2",
    "@typescript-eslint/parser": "^8.29.0",
    "@vercel/ncc": "^0.38.3",
    "ajv": "^8.17.1",
    "eslint": "^8.31.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.1.2",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "prepend-file-cli": "^1.0.6",
    "prettier": "^3.5.3",
    "tmp": "^0.2.3",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2",
    "yargs": "^17.7.2"
  }
}
